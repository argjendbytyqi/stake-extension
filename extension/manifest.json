{
  "manifest_version": 3,
  "name": "StakePeek Blitz",
  "version": "1.0.0",
  "description": "High-speed automatic drop claiming for Stake.",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://stake.com/*",
    "https://stake.us/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://stake.com/settings/offers*", "https://stake.us/settings/offers*"],
      "js": ["warmer.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}